# Enable rewrite engine

RewriteEngine On

# Redirect from HTTP to HTTPS (if SSL is enabled)

RewriteCond %{HTTPS} off
RewriteRule ^(.\*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Serve index.html for requests to the root domain '/'

DirectoryIndex index.html

# Handle 404 errors with custom error page

ErrorDocument 404 /404.html

# Set security headers (example for Content Security Policy)

Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline';"

# Disable directory listing

Options -Indexes

# Prevent access to .htaccess file itself

<Files .htaccess>
Require all denied
</Files>

# Prevent access to .env files

<Files ~ "^\.env">
Order allow,deny
Deny from all
</Files>
